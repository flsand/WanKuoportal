<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context="com.example.administrator.wankuoportal.ui.RenCai.MianShiYaoQingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/x42"
            android:padding="@dimen/x13"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/information_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="面试邀请函"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/x13">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黄安琪" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x13"
                android:text="你好："
                android:textColor="@color/henhui" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/x5"
            android:text="        经过我司HR的初步筛选，认为你与我们的职位要求很匹配现诚挚邀请你来我司面谈。请准时出席，如时间上变化也请尽快与我们联系。"
            android:textColor="@color/henhui" />
    </LinearLayout>

    <LinearLayout
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x75"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="面试时间" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="请选择面试时间"
            android:textColor="@color/henhui" />

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:padding="@dimen/x3"
            android:src="@drawable/sanjiao" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x75"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="面试地点" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入面试地点"
            android:paddingLeft="@dimen/x5"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x75"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="联系人" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入联系人"
            android:paddingLeft="@dimen/x5"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x75"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="联系人电话" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入联系人电话"
            android:paddingLeft="@dimen/x5"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x75"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="备注" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请携带简历"
            android:textColor="@color/henhui" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请带作品"
            android:textColor="@color/henhui" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x75"
            android:layout_height="match_parent"
            android:gravity="center_vertical" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入备注" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x13"
        android:gravity="center"
        android:textColor="@color/henhui"
        android:textSize="11sp"
        android:text="发送面试邀请需要金币（需要五个金币）金币不足，请充值"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/x13">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x42"
            android:layout_centerInParent="true"
            android:text="发送"
            android:textColor="@color/huise"
            android:background="@drawable/bg_login"
            android:gravity="center"/>
    </RelativeLayout>

</LinearLayout>
