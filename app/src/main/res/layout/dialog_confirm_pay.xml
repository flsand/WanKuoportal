<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_kuang_grey"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/confirm_pay"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_gravity="right"
                android:padding="@dimen/x10"
                android:src="@drawable/cha" />

        </LinearLayout>


        <TextView
            android:id="@+id/tx_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/x20"
            android:text="验证码已发送到您的181****7447得手机\n请注意查收"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/ed_yzm"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x30"
            android:layout_gravity="center"
            android:background="@drawable/kuang_edit"
            android:hint="请输入验证码"
            android:inputType="number"
            android:paddingLeft="@dimen/x5"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/x15">

            <TextView
                android:id="@+id/cancle"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x30"
                android:background="@drawable/bg_kuang_red"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/white" />

            <View
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/x1" />

            <TextView
                android:id="@+id/ok"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x30"
                android:background="@drawable/bg_kuang_red"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>