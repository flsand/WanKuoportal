<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/answer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jyltz"
    android:orientation="vertical"
    tools:context="com.example.administrator.wankuoportal.ui.DaTi.Wzy_AnswerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wen_back"
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/x42"
            android:padding="@dimen/x13"
            android:src="@drawable/black_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="记忆力挑战"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x13"
            android:paddingRight="@dimen/x13">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/jy_manposition"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="您是第20个回答此题的" />

                <TextView
                    android:id="@+id/djs_jy"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:layout_gravity="center"
                    android:background="@drawable/jydjs"
                    android:gravity="center"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/x15"
                            android:layout_height="@dimen/x15"
                            android:layout_gravity="center"
                            android:src="@drawable/shici0010" />

                        <TextView
                            android:id="@+id/yes_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingLeft="@dimen/x5"
                            android:text="0"
                            android:textColor="#2db2f9" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/x15"
                            android:layout_height="@dimen/x15"
                            android:layout_gravity="center"
                            android:src="@drawable/shici0012" />

                        <TextView
                            android:id="@+id/no_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingLeft="@dimen/x5"
                            android:text="0" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/jy_quessitionposition"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="/10" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/jy_qst_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/x5"
                android:paddingTop="@dimen/x13"
                tools:text="万阔团队中拥有着来自Google，腾讯、百度、58同城、360、DENA等全球顶级互联网公司的技术精英。他们对互联网产业的深刻理解对用户需求的敏锐洞察，对未来趋势的智慧视角，让万阔产品以无缝的多屏体验和卓越技术水平著称。" />

            <TextView
                android:id="@+id/jy_qst_qst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x13"
                android:textColor="@color/colorPrimary"
                tools:text="万阔团队技术精英都来自哪里您知道吗？" />

            <ImageView
                android:id="@+id/jy_qst_ima"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x150"
                tools:src="@drawable/dati_guangao" />

            <Button
                android:id="@+id/jumpBtn"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/option_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/x3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x5"
                    android:text="A" />

                <ImageView
                    android:id="@+id/ima_a"
                    android:layout_width="@dimen/x29"
                    android:layout_height="@dimen/x29"
                    android:src="@drawable/jytz_quan" />

                <TextView
                    android:id="@+id/question_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x5"
                    tools:text="是来自北京" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/option_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/x3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x5"
                    android:text="B" />

                <ImageView
                    android:id="@+id/ima_b"
                    android:layout_width="@dimen/x29"
                    android:layout_height="@dimen/x29"
                    android:src="@drawable/jytz_quan" />

                <TextView
                    android:id="@+id/question_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x5"
                    tools:text="是来自上海" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/option_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/x3">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x5"
                    android:text="C" />

                <ImageView
                    android:id="@+id/ima_c"
                    android:layout_width="@dimen/x29"
                    android:layout_height="@dimen/x29"
                    android:src="@drawable/jytz_quan" />

                <TextView
                    android:id="@+id/question_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x5"
                    tools:text="是来自深圳" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/option_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/x3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x5"
                    android:text="D" />

                <ImageView
                    android:id="@+id/ima_d"
                    android:layout_width="@dimen/x29"
                    android:layout_height="@dimen/x29"
                    android:src="@drawable/jytz_quan" />

                <TextView
                    android:id="@+id/question_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x5"
                    tools:text="是来自Google，腾讯、百度、58同城、360、DENA等全球顶级互联网公司" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/x13">

                <TextView
                    android:id="@+id/nextquesition"
                    android:layout_width="@dimen/x215"
                    android:layout_height="@dimen/x42"
                    android:layout_centerInParent="true"
                    android:background="@drawable/next_quesition_btn_selector"
                    android:gravity="center"
                    android:text="下一题"
                    android:visibility="gone"
                    android:textColor="@color/huise"/>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
