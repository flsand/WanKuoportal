<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context="com.example.administrator.wankuoportal.ui.HuiYuanWoDe.MyAccountActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/x42"
            android:padding="@dimen/x13"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/information_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我的钱包"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x13"
        android:paddingRight="@dimen/x13">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/touxiang"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x70"
            android:background="@color/colorPrimary"
            android:src="@drawable/tou" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x5">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="欢迎您，张三"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/phonenum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x5"
                android:text="150****6984"
                android:textColor="@color/henhui" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/x13">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="钱包余额（元）"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/mingxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="明细"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/qianbao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/x13"
        android:text="0.00"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x46"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x62"
        android:paddingRight="@dimen/x62">

        <TextView
            android:id="@+id/chongzhi"
            android:layout_width="0dp"
            android:layout_height="@dimen/x25"
            android:layout_weight="1"
            android:background="@drawable/kuangjianli"
            android:gravity="center"
            android:text="充值"
            android:textColor="@color/colorPrimary" />

        <View
            android:layout_width="@dimen/x20"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tixian"
            android:layout_width="0dp"
            android:layout_height="@dimen/x25"
            android:layout_weight="1"
            android:background="@drawable/lansebiankuang"
            android:gravity="center"
            android:text="提现"
            android:textColor="#229dfc" />

        <View
            android:layout_width="@dimen/x20"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/huanchengjinbi"
            android:layout_width="0dp"
            android:layout_height="@dimen/x25"
            android:layout_weight="1"
            android:background="@drawable/huangsebiankuang"
            android:gravity="center"
            android:text="购买金币"
            android:textColor="#ff7f8c" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x5" />

    <LinearLayout
        android:id="@+id/yinhangka"
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x46">

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:src="@drawable/yinhangka" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x5"
            android:text="银行卡管理 " />

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:padding="@dimen/x3"
            android:src="@drawable/right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/manager_margin_layout"
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x46"
        android:layout_marginTop="1dp">

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:src="@drawable/yinhangka" />

        <com.flysand.mylibrary.customView.AlwaysMarqueeTextView
            android:id="@+id/manager_margin_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x5"
            android:text="店长保证金 " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/orange_shape"
            android:padding="5dp"
            android:text="提取保证金"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/manager_margin_buttom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="不同级别店长赠送不同数量钻石，钻石可在金币商城消费抵扣，赠送钻石消费完毕，店长保证金可以全额申请领回"
            android:textSize="16sp" />

        <Button
            android:id="@+id/pack_up_btn"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="@drawable/read_frame"
            android:text="收起" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/phone"
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x46"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:src="@drawable/shouji" />

        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x5"
            android:text="手机设置 " />

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:padding="@dimen/x3"
            android:src="@drawable/right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/youxiang"
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x46"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:src="@drawable/youxiang" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x5"
            android:text="邮箱设置 " />

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:padding="@dimen/x3"
            android:src="@drawable/right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pay_mima"
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x46"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:src="@drawable/mima" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x5"
            android:text="修改支付密码 " />

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:padding="@dimen/x3"
            android:src="@drawable/right" />
    </LinearLayout>
</LinearLayout>
