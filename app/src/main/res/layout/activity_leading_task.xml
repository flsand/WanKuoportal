<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/blue" />

    <com.flysand.mylibrary.customView.MyRadioGroup
        android:id="@+id/leadingTaskMyRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RadioButton
                style="@style/orange_radio_button"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:text="领取任务赚钱" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="top"
                android:text="305个"
                android:textColor="@color/text_orange" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/blackSec" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RadioButton
                style="@style/orange_radio_button"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:text="已领任务" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="top"
                android:text="20个"
                android:textColor="@color/text_orange" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/blackSec" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RadioButton
                style="@style/orange_radio_button"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:text="总收益" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="top"
                android:text="20元"
                android:textColor="@color/text_orange" />

        </LinearLayout>

    </com.flysand.mylibrary.customView.MyRadioGroup>

    <include layout="@layout/segmenting_line" />

    <include layout="@layout/recyclerview_layout" />

</LinearLayout>
