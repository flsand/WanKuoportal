<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context="com.example.administrator.wankuoportal.ui.RenCai.RenCaiMainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/x42"
            android:padding="@dimen/x13"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="万阔人才"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/x42"
            android:layout_alignParentRight="true"
            android:padding="@dimen/x13"
            android:id="@+id/fabujianli"
            android:src="@drawable/fbjl" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/paixu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/didian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/x13"
            android:paddingTop="@dimen/x13">

            <TextView
                android:id="@+id/didian_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学历" />

            <View
                android:layout_width="@dimen/x5"
                android:layout_height="match_parent" />

            <ImageView

                android:id="@+id/didian_ima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sanjiao" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/x20"
            android:background="@color/grey" />

        <LinearLayout
            android:id="@+id/xinzi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/x13"
            android:paddingTop="@dimen/x13">

            <TextView
                android:id="@+id/xinzi_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="薪资" />

            <View
                android:layout_width="@dimen/x5"
                android:layout_height="match_parent" />

            <ImageView

                android:id="@+id/xinzi_ima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sanjiao" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/x20"
            android:background="@color/grey" />

        <LinearLayout
            android:id="@+id/zhiye"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/x13"
            android:paddingTop="@dimen/x13">

            <TextView
                android:id="@+id/zhiye_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="职业" />

            <View
                android:layout_width="@dimen/x5"
                android:layout_height="match_parent" />

            <ImageView

                android:id="@+id/zhiye_ima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sanjiao" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/x20"
            android:background="@color/grey" />

        <LinearLayout
            android:id="@+id/more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/x13"
            android:paddingTop="@dimen/x13">

            <TextView
                android:id="@+id/more_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多" />

            <View
                android:layout_width="@dimen/x5"
                android:layout_height="match_parent" />

            <ImageView

                android:id="@+id/more_ima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sanjiao" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wuxiaolong.pullloadmorerecyclerview.PullLoadMoreRecyclerView
            android:id="@+id/pullLoadMoreRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/mo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>
