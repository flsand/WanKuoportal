<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context="com.example.administrator.wankuoportal.ui.ZhaoPin.gerenxinxiActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/x42"
            android:padding="@dimen/x13"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="签到记录"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/x5"
                android:paddingLeft="@dimen/x13"
                android:paddingRight="@dimen/x13"
                android:paddingTop="@dimen/x5">

                <TextView
                    android:layout_width="@dimen/x67"
                    android:layout_height="wrap_content"
                    android:text="本人照片" />


                <ImageView
                    android:layout_width="@dimen/x62"
                    android:layout_height="@dimen/x62"
                    android:src="@drawable/touxiang" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="@dimen/x42"
                    android:layout_height="@dimen/x42"
                    android:padding="@dimen/x12"
                    android:src="@drawable/right" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

            <LinearLayout
                style="@style/LinearLayoutStyles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x13"
                android:paddingBottom="@dimen/x13"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/x67"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="姓名" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入支付密码确认"
                    android:paddingLeft="5dp"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

            <LinearLayout
                style="@style/LinearLayoutStyles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x13"
                android:paddingBottom="@dimen/x13"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/x67"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="性别" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请选择性别"
                    android:paddingLeft="@dimen/x5"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:padding="@dimen/x3"
                    android:src="@drawable/sanjiao" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

            <LinearLayout
                style="@style/LinearLayoutStyles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x13"
                android:paddingBottom="@dimen/x13"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/x67"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="出生年月" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请选择出生年月"
                    android:paddingLeft="@dimen/x5"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:padding="@dimen/x3"
                    android:src="@drawable/sanjiao" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

            <LinearLayout
                style="@style/LinearLayoutStyles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x13"
                android:paddingBottom="@dimen/x13"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/x67"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="最高学历" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请选择学历"
                    android:paddingLeft="@dimen/x5"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:padding="@dimen/x3"
                    android:src="@drawable/sanjiao" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

            <LinearLayout
                style="@style/LinearLayoutStyles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x13"
                android:paddingBottom="@dimen/x13"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/x67"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="工作年限" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请选择工作年限"
                    android:paddingLeft="5dp"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:padding="@dimen/x3"
                    android:src="@drawable/sanjiao" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

            <LinearLayout
                style="@style/LinearLayoutStyles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x13"
                android:paddingBottom="@dimen/x13"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/x67"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="职位类型" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请选择职位类型"
                    android:paddingLeft="@dimen/x5"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:padding="@dimen/x3"
                    android:src="@drawable/sanjiao" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

            <LinearLayout
                style="@style/LinearLayoutStyles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x13"
                android:paddingBottom="@dimen/x13"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/x67"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="期望地点" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请选择期望地点"
                    android:paddingLeft="@dimen/x5"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:padding="@dimen/x3"
                    android:src="@drawable/sanjiao" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

            <LinearLayout
                style="@style/LinearLayoutStyles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x13"
                android:paddingBottom="@dimen/x13"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/x67"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="期望薪资" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请选择期望薪资"
                    android:paddingLeft="@dimen/x5"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:padding="@dimen/x3"
                    android:src="@drawable/sanjiao" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

            <LinearLayout
                style="@style/LinearLayoutStyles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x13"
                android:paddingBottom="@dimen/x13"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/x62"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="联系号码" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入联系电话"
                    android:paddingLeft="@dimen/x5"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

            <LinearLayout
                style="@style/LinearLayoutStyles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x13"
                android:paddingBottom="@dimen/x13"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/x62"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="个人标签" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/x10">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="输入标签"
                        android:paddingLeft="@dimen/x5"
                        android:textSize="15sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/x10">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="输入标签"
                        android:paddingLeft="@dimen/x5"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_kuang_grey"
                        android:gravity="center"
                        android:hint="输入标签"
                        android:paddingLeft="@dimen/x5"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

            <LinearLayout
                style="@style/LinearLayoutStyles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x13"
                android:paddingBottom="@dimen/x13"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/x62"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="个人标签"
                    android:visibility="invisible" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/x10">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="输入标签"
                        android:paddingLeft="@dimen/x5"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/x10">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="输入标签"
                        android:paddingLeft="5dp"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/x10"
                    android:visibility="invisible">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_kuang_grey"
                        android:gravity="center"
                        android:hint="输入标签"
                        android:paddingLeft="5dp"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x13">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x42"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_login"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/huise" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
