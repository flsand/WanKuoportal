<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x150" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/x42"
                    android:layout_height="@dimen/x42"
                    android:paddingBottom="@dimen/x13"
                    android:paddingLeft="@dimen/x13"
                    android:paddingRight="@dimen/x5"
                    android:paddingTop="@dimen/x13"
                    android:src="@drawable/xiaolaba" />

                <TextSwitcher
                    android:id="@+id/tv_message"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x33"
                    android:gravity="center_vertical"

                    android:inAnimation="@anim/push_up_in"
                    android:outAnimation="@anim/push_up_out"
                    android:paddingLeft="@dimen/x8" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/x13">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/x5">

                        <TextView
                            android:id="@+id/shopname"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingRight="@dimen/x5"
                            android:text="浩铭电商科技"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/baozhangjiaoyi"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_kuang_red"
                            android:padding="@dimen/x3"
                            android:text="雇主交易保证"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/shopima"
                            android:layout_width="@dimen/x76"
                            android:layout_height="@dimen/x76"
                            android:src="@drawable/d1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/x13"
                            android:paddingRight="@dimen/x13">


                            <TextView
                                android:id="@+id/shop_area"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/x3"
                                android:textColor="@color/white"
                                tools:text="公司 至尊会员 山东省 烟台市" />

                            <TextView
                                android:id="@+id/baozhengjin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/x3"
                                android:textColor="@color/white"
                                tools:text="保证金：1500（先行赔付，放心交易）" />

                            <TextView
                                android:id="@+id/xiaoliang"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/x3"
                                android:textColor="@color/white"
                                tools:text="近三个月的销量：25单 收入：1350元" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#ffa180" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/x5"
                        android:text="分享"

                        android:textColor="@color/white" />

                    <LinearLayout
                        android:id="@+id/shoucang"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/x5">

                        <ImageView
                            android:id="@+id/shoucang_ima"
                            android:layout_width="@dimen/x42"
                            android:layout_height="@dimen/x42"
                            android:padding="@dimen/x13"
                            android:src="@drawable/ds" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收藏"
                            android:textColor="@color/white" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/x5"
                    android:paddingTop="@dimen/x5">

                    <View
                        android:layout_width="@dimen/x80"
                        android:layout_height="@dimen/x2"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/x10"
                        android:paddingRight="@dimen/x10"
                        android:text="推荐产品"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="@dimen/x80"
                        android:layout_height="@dimen/x2"
                        android:background="@color/colorPrimary" />


                </LinearLayout>

                <TextView
                    android:id="@+id/morechanpin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/x13"
                    android:text="更多"
                    android:textColor="@color/henhui" />

            </RelativeLayout>


            <GridView
                android:id="@+id/tuijian_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x5" />

            <com.youth.banner.Banner
                android:id="@+id/banner1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x150" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/x5"
                    android:paddingTop="@dimen/x5">

                    <View
                        android:layout_width="@dimen/x80"
                        android:layout_height="2dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/x10"
                        android:paddingRight="@dimen/x10"
                        android:text="精品案例"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="@dimen/x80"
                        android:layout_height="2dp"
                        android:background="@color/colorPrimary" />


                </LinearLayout>

                <TextView
                    android:id="@+id/moreanli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/x13"
                    android:text="更多"
                    android:textColor="@color/henhui" />

            </RelativeLayout>


            <GridView
                android:id="@+id/anli_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <com.youth.banner.Banner
                android:id="@+id/banner2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x150" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50"
                android:background="@color/white">

                <TextView
                    android:id="@+id/dianpuzixun"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="店铺资讯" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/x30"
                    android:layout_gravity="center"
                    android:background="@color/huise" />

                <TextView
                    android:id="@+id/dianpupingjia"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="店铺评价" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pingjia_Lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/huise" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x50"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/hao"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="好评" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/x30"
                        android:layout_gravity="center"
                        android:background="@color/huise" />

                    <TextView
                        android:id="@+id/zhong"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="中评" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/x30"
                        android:layout_gravity="center"
                        android:background="@color/huise" />

                    <TextView
                        android:id="@+id/cha"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="差评" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/huise" />
            </LinearLayout>

            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/x13"
                    android:paddingTop="@dimen/x13"
                    android:textColor="@color/henhui"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/allchanpin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/x13"
            android:paddingTop="@dimen/x13"
            android:text="全部产品"
            android:textColor="@color/henhui"
            android:textSize="13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/huise" />

        <TextView
            android:id="@+id/allanli"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/x13"
            android:paddingTop="@dimen/x13"
            android:text="精品案例"
            android:textColor="@color/henhui"
            android:textSize="13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/huise" />

        <TextView
            android:id="@+id/call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/x13"
            android:paddingTop="@dimen/x13"
            android:text="联系服务商"
            android:textColor="@color/henhui"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/guyong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingBottom="@dimen/x13"
            android:paddingTop="@dimen/x13"
            android:text="直接雇佣TA"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>