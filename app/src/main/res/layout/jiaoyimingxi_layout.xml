<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x5"
        android:paddingLeft="@dimen/x5"
        android:paddingRight="@dimen/x10"
        android:paddingTop="@dimen/x5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x8"
            android:text="创建时间" />

        <EditText
            android:id="@+id/starttime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_kuang_henhui"
            android:hint="请选择开始时间"
            android:paddingLeft="@dimen/x3"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x8"
            android:text="到" />

        <EditText
            android:id="@+id/endtime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_kuang_henhui"
            android:hint="请选择结束时间"
            android:paddingLeft="@dimen/x3"
            android:textSize="13sp" />

        <View
            android:layout_width="@dimen/x8"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shenfen"
            android:padding="@dimen/x5"
            android:text="搜索"
            android:textColor="@color/white" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x5"
        android:background="@color/huise" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wuxiaolong.pullloadmorerecyclerview.PullLoadMoreRecyclerView
            android:id="@+id/pullLoadMoreRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/toumingdu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/touming" />
    </RelativeLayout>

</LinearLayout>