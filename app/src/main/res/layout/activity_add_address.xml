<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context="com.example.administrator.wankuoportal.ui.SetUp.AddAddressActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/x42"
            android:padding="@dimen/x13"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/information_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="添加新地址"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/x13">

        <TextView
            android:layout_width="@dimen/x60"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="联系人" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入姓名"
            android:textSize="15sp"
            android:id="@+id/ed_name"
            android:paddingLeft="@dimen/x5" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/x13">

        <TextView
            android:layout_width="@dimen/x60"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="联系电话" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="填写联系人电话号码"
            android:id="@+id/ed_phone"
            android:inputType="number"
            android:maxLength="11"
            android:textSize="15sp"
            android:paddingLeft="@dimen/x5" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:id="@+id/diqu_lin"
        android:padding="@dimen/x13"
        >

        <TextView
            android:layout_width="@dimen/x60"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="所在地区" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="请选择"
            android:id="@+id/tx_diqu"
            android:textColor="@color/henhui"
            android:paddingRight="@dimen/x5"
            android:gravity="right|center_vertical"
            android:paddingLeft="@dimen/x5" />

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:padding="@dimen/x3"
            android:layout_gravity="center_vertical"
            android:src="@drawable/right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="@dimen/x13"
        >

        <TextView
            android:layout_width="@dimen/x60"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="所在小区" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="填写小区名称"
            android:textSize="15sp"
            android:id="@+id/ed_xiaoqu"
            android:paddingLeft="@dimen/x5" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="@dimen/x13"
        >

        <TextView
            android:layout_width="@dimen/x60"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="门牌号" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="填写门牌号"
            android:textSize="15sp"
            android:id="@+id/ed_menpai"
            android:paddingLeft="@dimen/x5" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请填写详细地址不得少于五个字"
        android:gravity="start"
        android:textSize="15sp"
        android:id="@+id/ed_xiangxi"
        android:maxLength="40"
        android:minLines="3"
        android:padding="@dimen/x13"
        android:background="@color/white"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/x13">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x42"
            android:layout_centerInParent="true"
            android:text="确定"
            android:id="@+id/ok"
            android:textColor="@color/huise"
            android:background="@drawable/bg_login"
            android:gravity="center"/>
    </RelativeLayout>

</LinearLayout>
