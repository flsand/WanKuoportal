<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context="com.example.administrator.wankuoportal.ui.SetUp.AddYHKActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/x42"
            android:padding="@dimen/x13"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="添加银行卡"
            android:textColor="@color/white"
            android:id="@+id/information_title"
            android:textSize="18sp" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x13"
        android:gravity="center_vertical"
        android:textColor="@color/henhui"
        android:textSize="13sp"
        android:text="此银行卡号开户名必须与下方开户名一致"/>

    <LinearLayout
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/x13">

        <TextView
            android:layout_width="@dimen/x93"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="银行账户类型" />

        <TextView
            android:id="@+id/ed_zhanhutype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="借记卡"
            android:paddingLeft="@dimen/x5"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:padding="@dimen/x13"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x93"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="开户真实姓名" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:id="@+id/name"
            android:hint="张三"
            android:textSize="15sp"
            android:paddingLeft="@dimen/x5" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x13"

        android:id="@+id/kaihutype_lin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x93"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="开户人类型" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="个人"
            android:id="@+id/kaihutype"
            android:textSize="15sp"
            android:paddingLeft="@dimen/x5" />
        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:src="@drawable/right"
            android:padding="@dimen/x3"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x13"
        android:id="@+id/choose_address"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="开户卡所在省市" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:id="@+id/address_tx"
            android:gravity="center_vertical|right"
            android:textSize="15sp"
            android:paddingLeft="@dimen/x5" />
        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:src="@drawable/right"
            android:padding="@dimen/x3"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x13"
        android:id="@+id/yhchoose_lin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="选择银行  " />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:id="@+id/yinhang_tx"
            android:gravity="center_vertical|right"
            android:textSize="15sp"
            android:paddingLeft="@dimen/x5" />
        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:src="@drawable/right"
            android:padding="3dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x13"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x93"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="支行名称" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请填写支行名称"
            android:id="@+id/zhihang_ed"
            android:textSize="15sp"
            android:paddingLeft="@dimen/x5" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x13"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x93"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="银行卡号" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入银行卡号"
            android:id="@+id/ed_cardnum"
            android:textSize="15sp"
            android:paddingLeft="@dimen/x5" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/x13">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x42"
            android:layout_centerInParent="true"
            android:text="确定"
            android:id="@+id/queding"
            android:textColor="@color/huise"
            android:background="@drawable/bg_login"
            android:gravity="center"/>
    </RelativeLayout>
</LinearLayout>
