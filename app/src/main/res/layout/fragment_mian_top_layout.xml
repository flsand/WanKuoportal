<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:orientation="vertical">

    <include
        android:id="@+id/banner1"
        layout="@layout/banner_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:src="@drawable/sy_tt" />

        <View
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:background="@color/grey" />


        <com.oushangfeng.marqueelayout.MarqueeLayout
            android:id="@+id/main_marquee_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_weight="4"
            app:enableAlphaAnim="true"
            app:enableScaleAnim="false"
            app:orientation="up"
            app:switchTime="3000" />

    </LinearLayout>


    <GridView
        android:id="@+id/main_top_classification_gv"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:numColumns="5"
        android:scrollbars="none" />

    <GridView
        android:id="@+id/main_top_classification_four_gv"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey"
        android:horizontalSpacing="1dp"
        android:numColumns="2"
        android:scrollbars="none"
        android:verticalSpacing="1dp" />

    <include
        android:id="@+id/banner2"
        layout="@layout/banner_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp" />


    <include layout="@layout/fragment_main_middle_layout" />

    <include
        android:id="@+id/banner3"
        layout="@layout/banner_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp" />

    <GridView
        android:id="@+id/gridten_gv"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey"
        android:horizontalSpacing="1dp"
        android:numColumns="5"
        android:scrollbars="none"
        android:verticalSpacing="1dp" />

    <include
        android:id="@+id/banner4"
        layout="@layout/banner_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />


</LinearLayout>