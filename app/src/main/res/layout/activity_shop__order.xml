<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context="com.example.administrator.wankuoportal.ui.shop.Shop_OrderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/x42"
            android:padding="@dimen/x13"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="确定订单"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/x13">

        <ImageView
            android:layout_width="@dimen/x30"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:src="@drawable/pay_address" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/address_name_tocarbuy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="收货人："
                    android:textColor="@color/textco"
                    android:textSize="@dimen/x17" />

                <TextView
                    android:id="@+id/address_phone_tocarbuy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="@dimen/x15"
                    android:textColor="@color/textco"
                    android:textSize="@dimen/x17"
                    tools:text="18153527447" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/address_address_tocarbuy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="收货地址:"
                    android:textColor="@color/textco"
                    android:textSize="@dimen/x15"
                    tools:text="收货地址：黑龙江省哈尔滨市巴彦县西集镇哈尔滨市巴彦县西集市" />

                <ImageView
                    android:id="@+id/address_change_tocarbuy"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:gravity="right"
                    android:padding="@dimen/x10"
                    android:src="@drawable/right" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x5"
                android:text="（请填写正确地址，否则后果自负）"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/addaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x10"
        android:text="@string/add_address"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x5"
        android:src="@drawable/lanhongtiao" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:orientation="horizontal"
        android:padding="@dimen/x13">

        <ImageView
            android:id="@+id/goods_ima_togroupbuy"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x100"
            android:src="@drawable/dhsc0003" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x10">

            <TextView
                android:id="@+id/goods_name_togroupbuy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="2"
                android:paddingTop="@dimen/x5"
                android:text="千选家用电子秤体重秤精准人体秤千选家用电子秤体重秤精准人体秤千选家用电子秤体重秤精准人体秤"
                android:textColor="@color/textco"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/yanse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/x5"
                android:text="颜色分类：摩登灰" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goods_price_togroupbuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金币："
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/goods_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="价格："
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/goods_num_togroupbuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="x1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/x13">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="购买数量" />

        <ImageView
            android:id="@+id/jian"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:background="@drawable/jian" />

        <TextView
            android:id="@+id/shuliang"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:gravity="center"
            android:text="1" />

        <ImageView
            android:id="@+id/jia"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:background="@drawable/j" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/x13">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="买家留言：" />

        <EditText
            android:id="@+id/ed_jianyi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:ellipsize="end"
            android:hint="选填：对本次交易的说明（建议填写已和卖家）"
            android:maxLength="50"
            android:maxLines="4"
            android:minLines="4"
            android:paddingLeft="@dimen/x5"
            android:textSize="15sp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:text="需要金币：" />

        <TextView
            android:id="@+id/jinbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x10"
            android:text="29.90"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/tijiaoorder"
            android:layout_width="@dimen/x110"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>
