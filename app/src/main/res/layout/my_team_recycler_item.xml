<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/x12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/my_team_item_round_iv"
            app:srcCompat="@drawable/my_team_ic_default_head"
            android:scaleType="fitXY"
            app:riv_oval="true"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40" />

        <LinearLayout
            android:layout_marginLeft="@dimen/y12"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/my_team_item_tv_huiyuanmingcheng"
                android:textSize="@dimen/x16"
                android:text="会员名称（普通会员）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_team_item_root_jiangli"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/my_team_item_tv_jiangli_title"
                android:textSize="@dimen/x12"
                android:text="我的推荐奖励"
                android:textColor="@color/theme_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/my_team_item_tv_jiangli_content"
                android:textSize="@dimen/x12"
                android:text="200元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_team_item_root_shouyi"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/my_team_item_tv_zongxiaoshoue"
                android:textSize="@dimen/x12"
                android:text="总销售额:200元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/my_team_item_tv_wodeshouru"
                android:textSize="@dimen/x12"
                android:text="我的收入:100元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>



    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"/>
</LinearLayout>