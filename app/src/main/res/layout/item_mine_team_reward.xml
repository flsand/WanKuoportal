<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">
    <!--圆形店长头像-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_mine_team_head_iv"
        android:layout_width="@dimen/x63"
        android:layout_height="@dimen/x63"
        android:layout_below="@id/smallStoreBanner"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/x15"
        android:src="@drawable/tou" />

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_mine_team_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="王剑涛" />

            <TextView
                android:id="@+id/item_mine_team_level_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_orange"
                android:textSize="10sp"
                tools:text="(白银店长)" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_mine_team_referee_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            tools:text="推荐人：净宗之妙，全在于行" />

        <TextView
            android:id="@+id/item_mine_team_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_gray"
            tools:text="2017-12-19 13:07:56" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_mine_team_flag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的推荐奖励"
            android:textColor="@color/text_orange"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_mine_team_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="\?"
                android:textColor="@color/text_orange"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="元"
                android:textSize="10sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>