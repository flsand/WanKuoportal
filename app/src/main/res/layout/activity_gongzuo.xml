<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.administrator.wankuoportal.ui.ZhaoPin.gongzuoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/x42"
            android:padding="@dimen/x13"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="工作经历"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x13"
        android:paddingTop="@dimen/x13">

        <TextView
            android:layout_width="@dimen/x67"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="工作名称" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入工作名称"
            android:paddingLeft="@dimen/x5"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <LinearLayout
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x13"
        android:paddingBottom="@dimen/x13"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x67"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="企业性质" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请选择企业性质"
            android:paddingLeft="@dimen/x5"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:padding="@dimen/x3"
            android:src="@drawable/sanjiao" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <LinearLayout
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x13"
        android:paddingBottom="@dimen/x13"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x67"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="职位类型" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请选择职位类型"
            android:paddingLeft="@dimen/x5"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:padding="@dimen/x3"
            android:src="@drawable/sanjiao" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <LinearLayout
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x13"
        android:paddingBottom="@dimen/x13"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x67"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="职业名称" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请选择职业名称"
            android:paddingLeft="@dimen/x5"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:padding="@dimen/x3"
            android:src="@drawable/sanjiao" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <LinearLayout
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x13"
        android:paddingBottom="@dimen/x13"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x67"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="时间段" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请选择开始时间"
            android:paddingLeft="@dimen/x5"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:padding="@dimen/x3"
            android:src="@drawable/sanjiao" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <LinearLayout
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x13"
        android:paddingBottom="@dimen/x13"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x67"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="时间段"
            android:visibility="invisible" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请选择结束时间"
            android:paddingLeft="@dimen/x5"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:padding="@dimen/x3"
            android:src="@drawable/sanjiao" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <LinearLayout
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x13"
        android:paddingBottom="@dimen/x13"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x67"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="薪资段" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请选择薪资段"
            android:paddingLeft="@dimen/x5"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:padding="@dimen/x3"
            android:src="@drawable/sanjiao" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x107"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingTop="@dimen/x13"
        android:paddingBottom="@dimen/x13">

        <TextView
            android:layout_width="@dimen/x67"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/x13"
            android:text="工作描述" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="start"
            android:hint="请选择薪资段"
            android:paddingLeft="@dimen/x5"
            android:paddingTop="@dimen/x13"
            android:textSize="15sp" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/x13">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x42"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_login"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/huise" />
    </RelativeLayout>

</LinearLayout>
