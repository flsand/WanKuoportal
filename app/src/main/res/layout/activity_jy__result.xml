<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huise"
    tools:context="com.example.administrator.wankuoportal.ui.DaTi.JY_ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x42"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/wen_back"
                    android:layout_width="@dimen/x42"
                    android:layout_height="@dimen/x42"
                    android:padding="@dimen/x13"
                    android:src="@drawable/back" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/title"
                    android:text="记忆力挑战成绩"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/wen_man"
                    android:layout_width="@dimen/x42"
                    android:layout_height="@dimen/x42"
                    android:padding="@dimen/x13"
                    android:src="@drawable/wode" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/x13">

                <ImageView
                    android:layout_width="@dimen/x24"
                    android:layout_height="@dimen/x24"
                    android:src="@drawable/paihang"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/x5"
                    android:id="@+id/jyr_paiming"
                    android:textColor="@color/white" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/x13"
                android:paddingRight="@dimen/x13"
                android:paddingTop="@dimen/x10"
                android:id="@+id/jyr_result"
                tools:text="亲，您答对了5道题，答错了5道题，获得了38枚金币，非常棒呦!继续加油!更多金币等您呦!"
                android:textColor="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/x13">

                <LinearLayout
                    android:layout_width="@dimen/x200"
                    android:layout_height="@dimen/x150"
                    android:layout_centerInParent="true"
                    android:background="@drawable/dakuang"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/x15"
                        android:text="金币"
                        android:textColor="@color/white"
                        android:textSize="38sp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="670"
                        android:id="@+id/jyr_jb"
                        android:textColor="@color/white"
                        android:textSize="48sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/x13">

                <TextView
                    android:layout_width="@dimen/x112"
                    android:layout_height="@dimen/x35"
                    android:background="@drawable/bt_bg_result"
                    android:gravity="center"
                    android:text="领取金币"
                    android:textSize="13sp"
                    android:id="@+id/jyr_getjb"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="@dimen/x10"
                    android:layout_height="@dimen/x10" />

                <TextView
                    android:layout_width="@dimen/x112"
                    android:layout_height="@dimen/x35"
                    android:background="@drawable/bt_bg_result"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:id="@+id/jyr_answer"
                    android:text="分享赚金币"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/x13"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/jyr_right"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zong_dui"
                    android:text="5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共对题" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/huise" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/jyr_error"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zong_cuo"
                    android:text="5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共错题" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x10"
            android:background="@color/huise" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x13"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/jyr_dtjl"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:padding="@dimen/x10"
                    android:src="@drawable/dtkjz" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="答题记录" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/jyr_dtsy"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:padding="@dimen/x10"
                    android:src="@drawable/dtk"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="答题首页"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/jyr_sc"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:padding="@dimen/x10"
                    android:id="@+id/dt_ima"
                    android:src="@drawable/jixudati"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dt_tx"
                    android:text="继续答题"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
