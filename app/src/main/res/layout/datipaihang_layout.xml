<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/x5"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x40"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:id="@+id/touxiang"
            android:src="@drawable/tou"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/x13"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1"
                tools:text="网名"
                android:textColor="@color/all_textc"
                android:textSize="14sp"
                android:id="@+id/wangming"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1"
                tools:text="金币：150.2万"
                android:textSize="14sp"
                android:id="@+id/jinbishu"
                android:textColor="@color/henhui"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="@dimen/x40"
        android:layout_height="wrap_content"
        tools:text="第一名"
        android:id="@+id/mingci"
        android:paddingTop="@dimen/x5"
        android:textSize="13sp"
        android:textColor="@color/colorPrimary"
        />

</LinearLayout>