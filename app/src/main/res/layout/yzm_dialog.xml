<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_kuang_grey"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_gravity="right"
            android:padding="@dimen/x10"
            android:id="@+id/close"
            android:src="@drawable/cha" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/x20"
            android:id="@+id/tx_phone"
            android:text="验证码已发送到您的181****7447得手机\n请注意查收"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x30"
            android:layout_gravity="center"
            android:background="@drawable/kuang_edit"
            android:hint="请输入验证码"
            android:id="@+id/ed_yzm"
            android:paddingLeft="@dimen/x5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/x15">

            <TextView
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x30"
                android:gravity="center"
                android:id="@+id/ok"
                android:background="@drawable/bg_kuang_red"
                android:textColor="@color/white"
                android:text="确定" />
            <View
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/x1"/>

            <TextView
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x30"
                android:gravity="center"
                android:background="@drawable/bg_kuang_red"
                android:textColor="@color/white"
                android:id="@+id/cancle"
                android:text="取消" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>