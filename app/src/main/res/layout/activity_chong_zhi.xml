<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context="com.example.administrator.wankuoportal.ui.Pay.ChongZhiActivity">


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x7" />

    <LinearLayout
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/x13"
        android:paddingTop="@dimen/x13"
        android:id="@+id/zfb"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/x33"
            android:layout_height="@dimen/x33"
            android:src="@drawable/zfb" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x10"
            android:text="支付宝" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:id="@+id/pay_zfb"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wx"
        android:paddingBottom="@dimen/x13"
        android:paddingTop="@dimen/x13">

        <ImageView
            android:layout_width="@dimen/x33"
            android:layout_height="@dimen/x33"
            android:src="@drawable/wx" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x10"
            android:text="微信" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:id="@+id/pay_wx"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10" />

    <LinearLayout
        style="@style/LinearLayoutStyles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x5"
            android:text="充值金额"
            android:textColor="@color/henhui" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/x5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textSize="25sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/jine"
                android:inputType="numberDecimal"
                android:paddingLeft="@dimen/x5"
                android:background="@null" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/x13">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x42"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_login"
            android:gravity="center"
            android:text="确定"
            android:id="@+id/queding"
            android:textColor="@color/huise" />
    </RelativeLayout>
</LinearLayout>
