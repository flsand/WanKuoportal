<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context="com.example.administrator.wankuoportal.ui.HuiYuanWoDe.DetailJBActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--奖励额度-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:background="#FE6833"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/x3"
                android:paddingTop="@dimen/x3">

                <TextView
                    android:id="@+id/mineTeamOneTv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="奖励总金额"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/mineTeamTotalAmountTv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#FFF100" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/x3"
                android:paddingTop="@dimen/x3">

                <TextView
                    android:id="@+id/mineTeamTwoTv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="收益总额"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/mineTeamTotalAmountOfTv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#FFF100" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/x3"
                android:paddingTop="@dimen/x3">

                <TextView
                    android:id="@+id/mineTeamThreeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="推荐人数"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/mineTeamTotalRevenueTv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#FFF100" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/x3"
                android:paddingTop="@dimen/x3">

                <TextView
                    android:id="@+id/mineTeamFourTv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="管理人数"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/mineTeamTotalPeopleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#FFF100" />

            </LinearLayout>

        </LinearLayout>
        <!--推荐的店长分类-->
        <com.flysand.mylibrary.customView.MyRadioGroup
            android:id="@+id/mineTeamRRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <!--推荐奖励-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/mineTeamAllRb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/x3"
                    android:background="@drawable/mine_team_type_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="全部" />

                <ImageView
                    android:id="@+id/mineTeamAllCornerIv"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/x4"
                    android:background="@drawable/mine_rb_icon" />

            </RelativeLayout>

            <!--推荐奖励-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/mineTeamRecommendedAwardsRb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/x3"
                    android:layout_weight="1"
                    android:background="@drawable/rb_mine_team_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="推荐奖励" />


            </RelativeLayout>

            <!--推荐奖励-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <RadioButton
                    android:id="@+id/mineTeamManagerAwardsRb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/x3"
                    android:background="@drawable/rb_mine_team_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="管理奖励" />


            </RelativeLayout> <!--推荐奖励-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <RadioButton
                    android:id="@+id/mineTeamProfitRb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/x3"
                    android:background="@drawable/rb_mine_team_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="推荐收益" />


            </RelativeLayout>
            <!--推荐奖励-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/mineTeamManagerProfitRb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/x3"
                    android:background="@drawable/rb_mine_team_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="管理收益" />


            </RelativeLayout>


        </com.flysand.mylibrary.customView.MyRadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/x3"
                android:layout_weight="0.75"
                android:gravity="center"
                android:textColor="#FFF100" />

            <TextView
                android:id="@+id/mineTeamRecommendedAwardsTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/x3"
                android:layout_weight="1"
                android:background="@drawable/mine_team_value_bg"
                android:gravity="center"
                android:text="15位店长"
                android:textColor="#FFF100" />

            <TextView
                android:id="@+id/mineTeamManagerAwardsTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/x3"
                android:layout_weight="1"
                android:background="@drawable/mine_team_value_bg"
                android:gravity="center"
                android:text="15位店长"
                android:textColor="#FFF100" />

            <TextView
                android:id="@+id/mineTeamProfitTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/x3"
                android:layout_weight="1"
                android:background="@drawable/mine_team_value_bg"
                android:gravity="center"
                android:text="15位店长"
                android:textColor="#FFF100" />

            <TextView
                android:id="@+id/mineTeamManagerProfitTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/x3"
                android:layout_weight="1"
                android:background="@drawable/mine_team_value_bg"
                android:gravity="center"
                android:text="15位店长"
                android:textColor="#FFF100" />
        </LinearLayout>

        <!--添加信息-->
        <include layout="@layout/recyclerview_layout" />

    </LinearLayout>

</LinearLayout>
