<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/my_info_item_iv_red_dot"
            android:visibility="visible"
            app:srcCompat="@drawable/my_info_red_dot"
            android:layout_width="@dimen/x5"
            android:layout_height="@dimen/x5" />
        <LinearLayout
            android:paddingTop="@dimen/y10"
            android:paddingBottom="@dimen/y10"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/my_info_item_tv_title"
                android:text="标题"
                android:maxLines="1"
                android:textSize="@dimen/x16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/my_info_item_tv_content"
                android:text="内容"
                android:textSize="@dimen/x14"
                android:maxLines="2"
                android:textColor="@color/text_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/my_info_item_tv_date"
            android:text="10分钟前"
            android:textSize="@dimen/x14"
            android:textColor="@color/text_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"/>
</LinearLayout>