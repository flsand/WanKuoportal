<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/x13">


    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/x10"
                android:text="店铺营业执照："
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x167"
                android:background="@color/huise"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/x5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/zz1"
                        android:layout_width="@dimen/x98"
                        android:layout_height="@dimen/x131"
                        android:src="@drawable/yy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="企业营业执照" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/zz2"
                        android:layout_width="@dimen/x98"
                        android:layout_height="@dimen/x131"
                        android:src="@drawable/yy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="企业营业执照" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/zz3"
                        android:layout_width="@dimen/x98"
                        android:layout_height="@dimen/x131"
                        android:src="@drawable/yy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="企业营业执照" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/x10"
                android:paddingTop="@dimen/x10"
                android:text="法人身份证："
                android:id="@+id/faren"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x167"
                android:background="@color/huise"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/x5">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/zheng_sfz"
                        android:layout_width="@dimen/x130"
                        android:layout_height="@dimen/x96"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/shenfenzheng" />

                    <ImageView
                        android:layout_width="@dimen/x130"
                        android:layout_height="@dimen/x96"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/masaike" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/zheng_sfz"
                        android:gravity="center"
                        android:paddingTop="@dimen/x10"
                        android:text="身份证正面" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/fan_sfz"
                        android:layout_width="@dimen/x130"
                        android:layout_height="@dimen/x96"

                        android:layout_centerHorizontal="true"
                        android:src="@drawable/shenfenfan" />

                    <ImageView
                        android:layout_width="@dimen/x130"
                        android:layout_height="@dimen/x96"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/masaike" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fan_sfz"
                        android:gravity="center"
                        android:paddingTop="@dimen/x10"
                        android:text="身份证反面" />

                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/x10"
                android:paddingTop="@dimen/x10"
                android:id="@+id/farenshouchi"
                android:text="法人手持身份证："
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x167"
                android:background="@color/huise"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/x5">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/sc_sfz"
                        android:layout_width="@dimen/x130"
                        android:layout_height="@dimen/x96"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/sfz" />

                    <ImageView
                        android:layout_width="@dimen/x130"
                        android:layout_height="@dimen/x96"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/masaike" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sc_sfz"
                        android:gravity="center"
                        android:paddingTop="@dimen/x10"
                        android:text="手持身份证" />

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>