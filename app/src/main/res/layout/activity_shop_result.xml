<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context="com.example.administrator.wankuoportal.ui.shop.SHopResultActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/x42"
            android:padding="@dimen/x13"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="订单详情"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x5" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/x13">

        <TextView
            android:id="@+id/order_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/textco"
            android:textSize="16sp"
            tools:text="订单号:454564564564" />

        <TextView
            android:id="@+id/order_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:paddingRight="@dimen/x15"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            tools:text="待发货" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10" />

    <LinearLayout
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/x13">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/x5">

                <ImageView
                    android:layout_width="@dimen/x30"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/x5"
                    android:paddingRight="@dimen/x5"
                    android:src="@drawable/pay_address" />

                <TextView
                    android:id="@+id/address_name_tocarbuy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/x10"
                    tools:text="殷丽萍   18153527447"
                    android:textColor="@color/textco"
                    android:textSize="17sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x30"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/x5"
                    android:paddingRight="@dimen/x5"
                    android:src="@drawable/pay_address"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/address_address_tocarbuy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x10"
                    tools:text="收货地址：黑龙江省哈尔滨市巴彦县西集镇哈尔滨市巴彦县西集市"
                    android:textColor="@color/henhui"
                    android:textSize="14sp" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:orientation="horizontal"
        android:padding="@dimen/x13">

        <ImageView
            android:id="@+id/goods_ima_togroupbuy"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x100"
            android:src="@drawable/dhsc0003" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/x5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goods_name_togroupbuy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="2"
                    android:paddingRight="@dimen/x10"
                    android:paddingTop="@dimen/x5"
                    android:textColor="@color/textco"
                    android:textSize="15sp"
                    tools:text="千选家用电子秤体重秤精准人体秤千选家用电子秤体重秤精准人体秤千选家用电子秤体重秤精准人体秤" />

                <TextView
                    android:id="@+id/goods_price_togroupbuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="金币：29"
                    android:textColor="@color/all_textc"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/yanse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/henhui"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:padding="@dimen/x5"
                tools:text="颜色分类：摩登灰" />


            <TextView
                android:id="@+id/goods_num_togroupbuy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/x5"
                android:textColor="@color/henhui"
                android:gravity="center_vertical"
                tools:text="x1" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/x13">

        <TextView
            android:id="@+id/fukuan_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/textco"
            android:textSize="15sp"
            tools:text="需付款" />

        <TextView
            android:id="@+id/fukuan_jaige"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="@dimen/x15"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            tools:text="¥29.00" />

    </LinearLayout>


</LinearLayout>
