<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background"/>

    <ImageView
        android:id="@+id/wen_back"
        android:layout_width="@dimen/x42"
        android:layout_height="@dimen/x42"
        android:padding="@dimen/x13"
        android:src="@drawable/black_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/x60"
        android:paddingRight="@dimen/x60"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="记忆赢大奖"
            android:textColor="#cc141c"
            android:textSize="@dimen/x18" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/x15"
            android:paddingTop="@dimen/x15"
            android:text="先记忆答题在开始答题"
            android:textColor="#cc141c"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/wen_satrt_jy"
            android:layout_width="@dimen/x138"
            android:layout_height="@dimen/x50"
            android:layout_gravity="center"
            android:background="@drawable/ksjy" />


    </LinearLayout>


</RelativeLayout>
