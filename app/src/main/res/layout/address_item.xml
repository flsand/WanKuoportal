<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x5"
        android:paddingLeft="@dimen/x13"
        android:paddingRight="@dimen/x13"
        android:paddingTop="@dimen/x5">

        <TextView
            android:id="@+id/address_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="收货人：xxx"
            android:textColor="@color/all_textc"
            android:textSize="@dimen/x15" />

        <TextView
            android:id="@+id/address_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13333333333"
            android:textColor="@color/all_textc"
            android:textSize="@dimen/x15" />
    </LinearLayout>


    <TextView
        android:id="@+id/address_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2"
        android:paddingBottom="@dimen/x5"
        android:paddingLeft="@dimen/x13"
        android:paddingRight="@dimen/x13"
        android:paddingTop="@dimen/x5"
        android:text="山东烟台开发区二氧化碳小区1024-256-00"
        android:textColor="@color/all_textc"
        android:textSize="@dimen/x14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_below="@id/address_address"
        android:background="@color/huise" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x13"
        android:paddingRight="@dimen/x13">

        <CheckBox
            android:id="@+id/sehzhimoren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为默认地址" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x17"
                android:layout_height="@dimen/x17"
                android:src="@drawable/bianji"/>

            <TextView
                android:id="@+id/address_set"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x45"
                android:gravity="center"
                android:padding="@dimen/x12"
                android:text="编辑"
                android:textColor="@color/all_textc"
                android:textSize="@dimen/x14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x17"
                android:layout_height="@dimen/x17"
                android:src="@drawable/lajitong" />

            <TextView
                android:id="@+id/address_del"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x45"
                android:gravity="center"
                android:padding="@dimen/x5"
                android:text="删除"
                android:textColor="@color/all_textc"
                android:textSize="@dimen/x14" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x5"
        android:background="@color/grey" />


</LinearLayout>