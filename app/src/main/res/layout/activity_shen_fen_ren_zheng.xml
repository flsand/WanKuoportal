<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey"
    tools:context="com.example.administrator.wankuoportal.ui.HuiYuanWoDe.ShenFenRenZhengActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/x42"
            android:padding="@dimen/x13"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="身份认证"
            android:textColor="@color/white"
            android:id="@+id/information_title"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x38"
        android:gravity="center_vertical"
        android:text="请务必填写本人二代身份证信息"
        android:paddingLeft="13dp"
        android:textColor="@color/henhui"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/x13"
        android:paddingTop="@dimen/x13"
        android:background="@color/white"
        android:paddingLeft="@dimen/x13"
        android:paddingRight="@dimen/x13"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="真实姓名"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/x5"
            android:id="@+id/ed_name"
            android:background="@null"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/x13"
        android:paddingTop="@dimen/x13"
        android:background="@color/white"
        android:paddingLeft="@dimen/x13"
        android:paddingRight="@dimen/x13"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="身份证号"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/x5"
            android:id="@+id/ed_number"
            android:background="@null"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/x13">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x42"
            android:layout_centerInParent="true"
            android:text="确定"
            android:id="@+id/queding"
            android:textColor="@color/huise"
            android:background="@drawable/bg_login"
            android:gravity="center"/>
    </RelativeLayout>

</LinearLayout>
