<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MyTeamActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/my_team_back"
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/x42"
            android:padding="@dimen/x13"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/my_team_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我的团队"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="#FE6833"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/x3"
            android:paddingTop="@dimen/x3">
            <TextView
                android:id="@+id/my_team_title_1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="奖励总额"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/my_team_num_1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="刷新中"
                android:textColor="#FFF100" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/x3"
            android:paddingTop="@dimen/x3">
            <TextView
                android:id="@+id/my_team_title_2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="收益总额"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/my_team_num_2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="刷新中"
                android:textColor="#FFF100" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/x3"
            android:paddingTop="@dimen/x3">
            <TextView
                android:id="@+id/my_team_title_3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="推荐人数"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/my_team_num_3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="刷新中"
                android:textColor="#FFF100" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/x3"
            android:paddingTop="@dimen/x3">
            <TextView
                android:id="@+id/my_team_title_4"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="管理人数"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/my_team_num_4"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="刷新中"
                android:textColor="#FFF100" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/my_team_all_root"
            android:background="@drawable/my_team_ic"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/y36">
            <TextView
                android:text="全部"
                android:textSize="@dimen/x12"
                android:padding="@dimen/x2"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/my_team_all_iv"
                android:src="@drawable/mt_team_right_bottom_ic"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/my_team_tjjl_root"
            android:background="@drawable/my_team_ic"
            android:layout_marginLeft="@dimen/x10"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/y40">
            <TextView
                android:text="推荐奖励"
                android:textSize="@dimen/x12"
                android:padding="@dimen/x2"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/my_team_tjjl_iv"
                android:src="@drawable/mt_team_right_bottom_ic"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/my_team_gljl_root"
            android:background="@drawable/my_team_ic"
            android:layout_marginLeft="@dimen/x10"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/y40">
            <TextView
                android:text="管理奖励"
                android:textSize="@dimen/x12"
                android:padding="@dimen/x2"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/my_team_gljl_iv"
                android:src="@drawable/mt_team_right_bottom_ic"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/my_team_tjsy_root"
            android:background="@drawable/my_team_ic"
            android:layout_marginLeft="@dimen/x10"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/y40">
            <TextView
                android:text="推荐收益"
                android:textSize="@dimen/x12"
                android:padding="@dimen/x2"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/my_team_tjsy_iv"
                android:src="@drawable/mt_team_right_bottom_ic"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/my_team_glsy_root"
            android:background="@drawable/my_team_ic"
            android:layout_marginLeft="@dimen/x10"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/y40">
            <TextView
                android:text="管理收益"
                android:textSize="@dimen/x12"
                android:padding="@dimen/x2"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/my_team_glsy_iv"
                android:src="@drawable/mt_team_right_bottom_ic"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_team_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>