<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context="com.example.administrator.wankuoportal.ui.Store.StoreMainActivity">

    <RelativeLayout
        android:id="@+id/base_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:background="@color/colorPrimary"
        android:theme="@style/ToolbarPopupTheme">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/x42"
                android:layout_height="@dimen/x42"
                android:padding="@dimen/x13"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                tools:text="命好电商科技"
                android:textColor="@color/white"
                android:textSize="18sp" />
    </RelativeLayout>

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/SlidingTabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        tl:tl_divider_color="@color/colorPrimary"
        tl:tl_indicator_color="@color/colorPrimary"
        tl:tl_indicator_width_equal_title="false"
        tl:tl_tab_padding="0dp"
        tl:tl_tab_width="@dimen/x73"
        tl:tl_textSelectColor="@color/colorPrimary"
        tl:tl_textUnselectColor="@color/all_textc"
        tl:tl_textsize="@dimen/x15"
        tl:tl_underline_color="@color/colorPrimary" />

    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
