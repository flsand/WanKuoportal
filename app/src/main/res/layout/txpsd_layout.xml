<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/x300"
    android:background="@drawable/bg_kuang_grey"
    android:padding="@dimen/x3"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="输入你的个性签名"
        android:gravity="center"
        android:textSize="18sp"
        android:padding="@dimen/x5"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x10"
        android:paddingBottom="@dimen/x10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/x30"
            android:layout_height="match_parent" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/kuang_edit"
            android:hint="请输入个性签名(最多30字)"
            android:id="@+id/psd_paypsd"
            android:minLines="3"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/gray"
            android:padding="@dimen/x5"
            android:maxLength="30"
            />
        <TextView
            android:layout_width="@dimen/x30"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x15" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/login_gray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x44"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="取消"
            android:id="@+id/cancel_paypsd"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:background="@color/login_gray"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="确认"
            android:id="@+id/ok_paypsd"
            android:layout_weight="1"/>
    </LinearLayout>






</LinearLayout>