<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCDB"
    tools:context="com.example.administrator.wankuoportal.ui.HuiYuanWoDe.MemberActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFCDB"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x110"
            android:background="@drawable/merber_top_bg">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x42"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="@dimen/x42"
                    android:layout_height="@dimen/x42"
                    android:padding="@dimen/x13"
                    android:src="@drawable/back" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_baiying_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFCDB"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingBottom="@dimen/x5"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:paddingTop="@dimen/x25">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="白银店长"
                android:textColor="#FF4200"
                android:textSize="13sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:src="@drawable/member_grade_1" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/member_grade_1_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="固定年分红"
                        android:textSize="@dimen/fenhong_text_size" />
                    <TextView
                        android:id="@+id/member_grade_1_center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="180"
                        android:textColor="#FF4200"
                        android:textSize="@dimen/fenhong_text_size" />
                    <TextView
                        android:id="@+id/member_grade_1_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="元"
                        android:textSize="@dimen/fenhong_text_size" />
                </LinearLayout>
                <Button
                    android:id="@+id/bt_member_grade_1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x25"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="#FF4200"
                    android:text="查看详情"
                    android:textColor="@color/white" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/x5"
                android:text="每月固定分红,免费领取奖品,区域佣金受益"
                android:textColor="#8E8C81"
                android:textSize="13dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#EEF3FA" />

        <LinearLayout
            android:id="@+id/ll_huangjin_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFCDB"
            android:orientation="vertical"
            android:paddingBottom="@dimen/x5"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:paddingTop="@dimen/x25">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黄金店长"
                android:textColor="#FF4200"
                android:textSize="13sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:src="@drawable/member_grade_2" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
