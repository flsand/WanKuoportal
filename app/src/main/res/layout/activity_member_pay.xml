<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF4200">

    <RelativeLayout
        android:id="@+id/rtl_member_pay_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_alignParentBottom="true"
        android:background="#FF4200">

        <TextView
            android:id="@+id/tv_member_pay_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginRight="@dimen/x50"
            android:background="@drawable/member_pay_submit_bg"
            android:gravity="center"
            android:padding="@dimen/x7"
            android:text="立即升级"
            android:textColor="#FF4200"
            android:textSize="15sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rtl_member_pay_layout"
        android:background="#FFFCDB">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x110"
                android:background="@drawable/merber_top_bg">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x42"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="@dimen/x42"
                        android:layout_height="@dimen/x42"
                        android:padding="@dimen/x13"
                        android:src="@drawable/back" />

                </RelativeLayout>

            </LinearLayout>
            <!--店长信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFCDB"
                android:orientation="vertical"
                android:paddingBottom="@dimen/x5"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:paddingTop="@dimen/x25">

                <TextView
                    android:id="@+id/tv_member_pay_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="白银店长"
                    android:textColor="#FF4200"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x70">

                    <ImageView
                        android:id="@+id/iv_member_pay_img"
                        android:layout_width="@dimen/x50"
                        android:layout_height="@dimen/x50"
                        android:layout_centerVertical="true"
                        android:src="@drawable/member_grade_1" />

                    <TextView
                        android:id="@+id/iv_member_pay_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x10"
                        android:layout_toRightOf="@id/iv_member_pay_img"
                        android:padding="@dimen/x5"
                        android:text="加盟店长保证金"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/iv_member_old_pay_money"
                        android:layout_width="@dimen/x60"
                        android:layout_height="@dimen/x20"
                        android:layout_alignParentRight="true"
                        android:background="#FF4200"
                        android:gravity="center"
                        android:text="1000"
                        android:textSize="12sp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/iv_member_upgrade_pay_money"
                        android:layout_width="@dimen/x60"
                        android:layout_height="@dimen/x20"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/iv_member_old_pay_money"
                        android:background="#FF4200"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:text="1000"
                        android:textColor="#FFF100" />

                    <Button
                        android:id="@+id/iv_member_pay_money"
                        android:layout_width="@dimen/x65"
                        android:layout_height="@dimen/x23"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/x15"
                        android:background="#FF4200"
                        android:text="1000"
                        android:visibility="gone"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/iv_member_pay_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@id/iv_member_pay_img"
                        android:padding="@dimen/x5"
                        android:text="享有每月固定分红,丰厚红包分红,免费领取奖品"
                        android:textColor="#8E8C81"
                        android:textSize="12.5dp" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#EEF3FA" />

            <TextView
                android:id="@+id/iv_member_pay_presentation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/x18"
                android:text="升级至白银店长享受以下收益 :"
                android:textColor="#FF4200"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/x3"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:paddingTop="@dimen/x3">

                <TextView
                    android:id="@+id/tv_member_benefits_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#281E1A"
                    android:textSize="13dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:background="#9F9884" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/x3"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:paddingTop="@dimen/x3">

                <TextView
                    android:id="@+id/tv_member_benefits_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#281E1A"
                    android:textSize="13dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:background="#9F9884" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/x3"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:paddingTop="@dimen/x3">

                <TextView
                    android:id="@+id/tv_member_benefits_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#281E1A"
                    android:textSize="13dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:background="#9F9884" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/x3"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:paddingTop="@dimen/x3">

                <TextView
                    android:id="@+id/tv_member_benefits_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#281E1A"
                    android:textSize="13dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:background="#9F9884" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/x3"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:paddingTop="@dimen/x3">

                <TextView
                    android:id="@+id/tv_member_benefits_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#281E1A"
                    android:textSize="13dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:background="#9F9884" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/x3"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:paddingTop="@dimen/x3">

                <TextView
                    android:id="@+id/tv_member_benefits_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#281E1A"
                    android:textSize="13dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:background="#9F9884" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/x3"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:paddingTop="@dimen/x3">

                <TextView
                    android:id="@+id/tv_member_benefits_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#281E1A"
                    android:textSize="13dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:background="#9F9884" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/x3"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:paddingTop="@dimen/x3">

                <TextView
                    android:id="@+id/tv_member_benefits_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#281E1A"
                    android:textSize="13dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:background="#9F9884" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
