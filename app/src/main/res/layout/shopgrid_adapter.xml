<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:orientation="vertical"
    android:padding="@dimen/x5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ima"
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:scaleType="fitXY"
            android:src="@drawable/dhsc0003" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:ellipsize="end"
            android:textSize="14sp"
            android:maxLines="2"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="社交恐惧社交恐惧阿基十块就爱看垃圾垃圾啦啥空间安静了就爱垃圾阿基十块就爱看垃圾垃圾啦啥空间安静了就爱垃圾 就会计会计考虑考虑考虑考虑 空间看了就看了就看了就看"
            android:textColor="@color/all_textc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/gold_mall_goods_tv_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="韩国精致饰品"
                android:textColor="@color/text_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/man_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25人购买"
                android:textColor="@color/henhui"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/text_orange"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/priceMoneyTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_orange"
                android:textSize="14sp"
                tools:text="3000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金币：4800"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>